<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/p_name"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/p_quantity"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/p_name"
            android:layout_alignBottom="@+id/p_name"
            android:layout_centerHorizontal="true"
            android:text="TextView" />

        <TextView
            android:id="@+id/p_price"
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/p_quantity"
            android:layout_alignBottom="@+id/p_quantity"
            android:layout_alignParentEnd="true"
            android:text="TextView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>