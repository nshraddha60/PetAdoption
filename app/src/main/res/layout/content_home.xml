<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exp.android_user.canteenautomation.Home"
    tools:showIn="@layout/app_bar_home">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/ngo1_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    android:background="@drawable/pet1"
        android:text="SPCA Dogs Care Center,\n Bajirao road, Pune"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/ngo2_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pet2"
        android:text="Pets Glorious Adoption Center, \n Bibwewadi, Pune"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ngo3_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pet3"
        android:text="Kennel Adoption Shelter,\n Aundh, Pune"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ngo4_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pet4"
        android:text="Sagar Pets Care And Rescue Center,\n JM Road, Pune"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/ngo5_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/pet5"
        android:text="Stephenson's Rescue And Adoption Center,\n Camp Contonment Area, Pune"
        android:textColor="@color/white" />



</LinearLayout>
</ScrollView>
</RelativeLayout>
