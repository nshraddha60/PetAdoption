<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:scrollbars="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.exp.android_user.canteenautomation.Order"
    tools:showIn="@layout/app_bar_order">


    <Button
        android:id="@+id/btnStarter"
        android:layout_width="match_parent"
        android:layout_height="100dp"
android:background="@drawable/bg_food"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Starter" />

    <Button
        android:id="@+id/btnLunch"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnStarter"
        android:background="@drawable/bg_main"
        android:text="Lunch"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btndinner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnLunch"
        android:background="@drawable/wall"
        android:text="Dinner"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnBreakfast"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btndinner"
        android:background="@drawable/adminportal_bg"
        android:text="Breakfast"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnDessert"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnBreakfast"
        android:background="@drawable/combofragment"
        android:text="Dessert"
        android:textColor="@color/white" />
</RelativeLayout>
