<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="8dp">
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:background="@drawable/menu_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/username_OD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/foodId_OD"
        android:gravity="center_vertical"
        android:hint="Name of Customer"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/foodId_OD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_OD"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/textView19"
        android:gravity="center_vertical"
        android:hint="Food Id"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/foodname_OD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foodId_OD"
        android:layout_below="@+id/foodId_OD"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:hint="Food Name"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/foodPrice_OD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/foodname_OD"
        android:layout_below="@+id/foodname_OD"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:hint="Food Price"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/quantity_OD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/foodPrice_OD"
        android:gravity="center_vertical"
        android:hint="Quantity"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username_OD"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="Username : " />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/foodId_OD"
        android:textColor="@color/white"
        android:text="Food Id" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foodname_OD"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="Food Name :" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/foodPrice_OD"
        android:text="Food Price :"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quantity_OD"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"
        android:text="Quantity :" />


</RelativeLayout>

</android.support.v7.widget.CardView>